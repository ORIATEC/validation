{
    "name": "oriatec/validation",
    "type": "library",
    "description": "A re-write of somnambulist/validation providing Laravel like validation, psr-7 compliant, as a standalone library",
    "keywords": [
        "php",
        "validation",
        "symfony",
        "psr-7"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Thibaud DELOBELLE",
            "email": "thibaud.delobelle@oriatec.fr"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-mbstring": "*",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.5",
        "doctrine/dbal": "~3.1.0",
        "ramsey/uuid": "~4.1",
        "symfony/var-dumper": "~5.3"
    },
    "autoload": {
        "psr-4": {
            "ORIATEC\\Components\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ORIATEC\\Components\\Validation\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist"
    }
}
